<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUpdateRecordActivity">

    <!--    ImageView: Input Profile Image-->
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_addphoto_black"
        app:c_background_color="@color/colorGray1"
        app:c_border="true"
        app:c_border_width="1dp" />
    <!--    EditText: Input User Name-->
    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:hint="Name"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:inputType="textPersonName|textCapWords" />
    <!--    EditText: Input User Phone-->
    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:hint="Phone"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:inputType="phone" />
    <!--    EditText: Input User Email-->
    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneEt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:hint="Email"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:inputType="textEmailAddress" />
    <!--    EditText: Input User DOB-->
    <EditText
        android:id="@+id/dobEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:hint="DOB dd/mm/yyyy"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:inputType="date" />
    <!--    EditText: Input User Bio Info-->
    <EditText
        android:id="@+id/bioEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobEt"
        android:minHeight="90dp"
        android:gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:hint="Short description"
        android:background="@drawable/shape_rectangle"
        android:padding="10dp"
        android:inputType="textCapSentences|textMultiLine" />
    <!--    FAB: Add/Update Record-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_done_white"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp" />

</RelativeLayout>